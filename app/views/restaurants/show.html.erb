<div class="container">
  <div class="row">
    <div class="col-sm">
      <h1>Restaurant</h1>
      <p>
        <strong>Name:</strong>
        <%= @restaurant.name %>
      </p>

      <p>
        <strong>Address:</strong>
        <%= @restaurant.address %>
      </p>

      <p>
        <strong>Category:</strong>
        <%= @restaurant.category %>
      </p>
          <!-- <div class="col-sm"> -->
       <ul>
         <% @reviews.each do |review| %>
         <li><%= review.rating %><%= review.content %></li>
         <% end %>
       </ul>

       <%= simple_form_for [@restaurant, @review] do |f| %>
        <%= f.input :content %>
        <%= f.input :rating %>
        <%= f.submit 'Save', class: 'btn btn-primary' %>
      <% end %>

      <div class="row">
        <div class="col-sm">
          <%= link_to 'Edit', edit_restaurant_path(@restaurant), class: 'btn btn-primary' %>
        </div>
        <div class="col-sm">
          <%= link_to 'All restaurants', restaurants_path, class: 'btn btn-primary' %>
        </div>
      </div>
    </div>

  </div>
</div>

